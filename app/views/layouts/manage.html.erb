<!DOCTYPE html>
<html>
  <head>
    <title>Tictactoe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'main' %>
  </head>

  <body>
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <a class="nav-link active" href="/player_menu">Меню</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/users/sign_out">Выход</a>
      </li>
    </ul>
    <div class='container'>
      <div id="app" :init-user="initParams(<%= @init_params.to_json %>)">
        <router-view></router-view>
        <!-- <notifications group="notifications" position="bottom right" @click.native="joinGame(props)"/> -->
        <notifications group="notifications"
               position="bottom right">
           <template slot="body" slot-scope="props">
            <div>
                <a class="title">
                  {{props.item.title}}
                </a>
                <a class="close" @click="props.close">
                  <i class="fa fa-fw fa-close"></i>
                </a>
                <a :href="'/player_menu#/games/' + props.item.text">
                  Перейти к игре
                </a>
            </div>
          </template>
        </notifications>
      </div>

    </div>
  </body>
</html>
